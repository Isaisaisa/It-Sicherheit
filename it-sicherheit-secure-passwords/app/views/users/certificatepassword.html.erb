<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user, url: createcertificate_user_path) do |f| %>


        <%= f.label :password %> <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Create Certificate", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>